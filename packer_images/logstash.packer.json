{
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "resource_group_name": "",
    "ssh_user": "ubuntu",
    "ssh_pass": "password123!",
    "db_url": "",
    "db_user": "",
    "db_pass": ""
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "subscription_id": "{{user `subscription_id`}}",
    "tenant_id": "{{user `tenant_id`}}",

    "managed_image_resource_group_name": "{{user `resource_group_name`}}",
    "managed_image_name": "logstash-image-{{isotime \"2006-01-02T030405\"}}",

    "ssh_username": "{{user `ssh_user`}}",
    "ssh_password": "{{user `ssh_pass`}}",

    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "16.04-LTS",

    "location": "UK South",
    "vm_size": "Standard_DS2_v2",

    "ssh_pty": "true"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "packer_images/logstash.conf",
      "destination": "logstash.conf"
    },
    {
      "type": "shell",
      "script": "packer_images/install_java8.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "packer_images/install_logstash.sh",
      "environment_vars": [ "LOGSTASH_VERSION={{user `logstash_version`}}",
        "DB_URL={{user `db_url`}}",
        "DB_USER={{user `db_user`}}",
        "DB_PWD={{user `db_pass`}}"],
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ]
}
